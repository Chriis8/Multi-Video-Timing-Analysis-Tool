<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <template class="VideoPlayer" parent="GtkBox">
        <property name="visible">true</property>

        <child>
            <object class="GtkBox" id="vbox">
                <property name="spacing">10</property>
                <property name="orientation">vertical</property>

                <child>
                    <object class="GtkBox" id="hboxtop">
                        <property name="spacing">10</property>
                        <property name="halign">center</property>
                        <property name="margin-top">20</property>

                        <child>
                            <object class="GtkButton" id="fchooser">
                                <signal name="clicked" handler="handle_fchooser_clicked" swapped="true"></signal>
                                <property name="label">Open File</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkLabel" id="text_view">
                                <property name="label">Please, select a mpegts video file.</property>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkPicture" id="picture"></object>
                </child>

                <child>
                    <object class="GtkLabel" id="label">
                        <property name="label">Position: 00:00:00</property>
                    </object>
                </child>

                <child>
                    <object class="GtkBox" id="hbox">
                        <property name="spacing">10</property>

                        <child>
                            <object class="GtkButton" id="previous_frame_button">
                                <signal name="clicked" handler="handle_previous_frame_clicked" swapped="true"></signal>
                                <property name="label">Preivous Frame</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkButton" id="play_button">
                                <signal name="clicked" handler="handle_play_clicked" swapped="true"></signal>
                                <property name="label">Play</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkButton" id="stop_button">
                                <signal name="clicked" handler="handle_stop_clicked" swapped="true"></signal>
                                <property name="label">Stop</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkButton" id="next_frame_button">
                                <signal name="clicked" handler="handle_next_frame_clicked" swapped="true"></signal>
                                <property name="label">Next Frame</property>
                            </object>
                        </child>

                        <child>
                            <object class="GtkButton" id="test_button">
                                <signal name="clicked" handler="handle_test_clicked" swapped="true"></signal>
                                <property name="label">Test</property>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>